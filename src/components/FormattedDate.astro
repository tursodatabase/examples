---
export interface Props {
	date: number;
}

const { date } = Astro.props;

const dateFormat = (datetime: number) => {
  const dateTime = new Date(datetime * 1000);

  const date = dateTime.toLocaleDateString([], {
    year: "numeric",
    month: "long",
    day: "numeric",
  });

  return date;
};
---

<time datetime={dateFormat(date)}>
	{
		dateFormat(date)
	}
</time>
